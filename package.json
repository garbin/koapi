{
  "name": "koapi",
  "version": "0.3.19",
  "description": "RESTful API framework based on koajs",
  "main": "lib/index.js",
  "bin": {
    "koapi": "./bin/koapi.js"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "helpers": false,
          "polyfill": false,
          "regenerator": true,
          "moduleName": "babel-runtime"
        }
      ]
    ]
  },
  "jest": {
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "es"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib"
    ],
    "setupFiles": [
      "<rootDir>/node_modules/babel-polyfill/lib"
    ]
  },
  "scripts": {
    "compile": "babel --presets es2015,stage-0 -d lib/ src/",
    "prepublish": "npm run compile",
    "start": "nodemon -L -x ./node_modules/.bin/babel-node example/app.js",
    "test": "export NODE_ENV=test && npm run knex migrate:rollback && npm run knex migrate:latest && npm run knex seed:run && jest --forceExit",
    "knex": "NODE_ENV=test knex --knexfile ./test/knex/knexfile.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garbin/koapi.git"
  },
  "keywords": [
    "RESTful",
    "API",
    "Framework",
    "koa"
  ],
  "author": "Garbin Huang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/garbin/koapi/issues"
  },
  "homepage": "https://github.com/garbin/koapi#readme",
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "bookshelf": "^0.13.3",
    "bookshelf-cascade-delete": "^2.0.0",
    "bookshelf-mask": "^2.0.1",
    "bookshelf-paranoia": "^0.13.0",
    "bookshelf-uuid": "^1.0.0",
    "isipaddress": "0.0.2",
    "jest": "^23.5.0",
    "joi": "^13.6.0",
    "joi-to-json-schema": "^3.3.0",
    "json-schema-faker": "^0.4.7",
    "kcors": "^2.2.2",
    "knex": "^0.15.2",
    "koa": "^2.5.2",
    "koa-accesslog": "0.0.2",
    "koa-better-body": "^3.0.4",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-compress": "^3.0.0",
    "koa-convert": "^1.2.0",
    "koa-cors": "0.0.16",
    "koa-formidable": "^1.0.0",
    "koa-helmet": "^4.0.0",
    "koa-logger": "^3.2.0",
    "koa-morgan": "^1.0.1",
    "koa-pagination": "^3.0.0",
    "koa-qs": "^2.0.0",
    "koa-ratelimit": "^4.1.2",
    "koa-router": "^7.0.1",
    "koa-static": "^5.0.0",
    "koapi-body": "^2.0.8",
    "lodash": "^4.16.6",
    "moment": "^2.15.2",
    "mysql": "^2.16.0",
    "pluralize": "^7.0.0",
    "supertest": "^3.0.0",
    "tldjs": "^2.3.1",
    "ulid": "^2.3.0",
    "wildcard": "^1.1.2",
    "winston": "^3.0.0",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.5.0",
    "nodemon": "^1.18.3",
    "nyc": "^12.0.2",
    "pg": "^7.4.3"
  }
}
