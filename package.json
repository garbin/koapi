{
  "name": "koapi",
  "version": "0.2.92",
  "description": "RESTful API framework based on koajs",
  "main": "lib/index.js",
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "jest": {
    "transform": { ".*": "<rootDir>/node_modules/babel-jest" },
    "moduleFileExtensions": [ "js", "json", "es" ],
    "testPathIgnorePatterns": [ "/node_modules/" ],
    "setupFiles": ["<rootDir>/node_modules/babel-polyfill/lib"]
  },
  "scripts": {
    "compile": "babel --presets es2015,stage-0 -d lib/ src/",
    "prepublish": "npm run compile",
    "start": "nodemon -L -x ./node_modules/.bin/babel-node example/app.js",
    "test": "export NODE_ENV=test && npm run knex migrate:rollback && npm run knex migrate:latest && npm run knex seed:run && jest --forceExit",
    "knex": "NODE_ENV=test knex --knexfile ./test/knex/knexfile.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garbin/koapi.git"
  },
  "keywords": [
    "RESTful",
    "API",
    "Framework",
    "koa"
  ],
  "author": "Garbin Huang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/garbin/koapi/issues"
  },
  "homepage": "https://github.com/garbin/koapi#readme",
  "dependencies": {
    "ava": "^0.15.2",
    "bookshelf": "^0.10.2",
    "bookshelf-cascade-delete": "^2.0.0",
    "bookshelf-mask": "^2.0.1",
    "bookshelf-paranoia": "^0.9.0",
    "bookshelf-uuid": "^1.0.0",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "isipaddress": "0.0.2",
    "joi-to-json-schema": "^2.3.0",
    "json-schema-faker": "^0.3.7",
    "kcors": "^2.2.0",
    "knex": "^0.12.6",
    "koa": "^2.0.0",
    "koa-accesslog": "0.0.2",
    "koa-better-body": "^2.0.1",
    "koa-bodyparser": "^2.0.1",
    "koa-compose": "^3.2.1",
    "koa-compress": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-cors": "0.0.16",
    "koa-formidable": "^1.0.0",
    "koa-helmet": "^2.0.0",
    "koa-logger": "^2.0.0",
    "koa-morgan": "^1.0.1",
    "koa-pagination": "^2.0.1",
    "koa-qs": "^2.0.0",
    "koa-ratelimit": "^2.4.0",
    "koa-router": "^7.0.1",
    "koa-static": "^3.0.0",
    "lodash": "^4.16.6",
    "moment": "^2.15.2",
    "mysql": "^2.10.2",
    "pluralize": "^3.1.0",
    "tldjs": "^1.6.2",
    "wildcard": "^1.1.2",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.5.0",
    "joi": "^9.2.0",
    "nodemon": "^1.9.1",
    "nyc": "^8.4.0",
    "pg": "^6.1.0"
  }
}
