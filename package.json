{
  "name": "koapi",
  "version": "0.2.27",
  "description": "RESTful API framework based on koajs",
  "main": "lib/index.js",
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.test.{js,es}",
      "!test/__lib__/**/*"
    ],
    "source": [
      "**/*.{js,jsx,es}",
      "!build/**/*"
    ],
    "require": [
      "babel-register",
      "babel-polyfill",
      "should",
      "should-http"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "extension": [
      ".jsx",
      ".es"
    ]
  },
  "scripts": {
    "compile": "babel --presets es2015,stage-0 -d lib/ src/",
    "prepublish": "npm run compile",
    "start": "nodemon -L -x ./node_modules/.bin/babel-node example/app.js",
    "test": "export NODE_ENV=test && npm run knex migrate:rollback && npm run knex migrate:latest && npm run knex seed:run && ava",
    "test-cov": "export NODE_ENV=test && npm run knex migrate:rollback && npm run knex migrate:latest && npm run knex seed:run && nyc ava",
    "nyc": "nyc",
    "knex": "NODE_ENV=test knex --knexfile ./test/knex/knexfile.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garbin/koapi.git"
  },
  "keywords": [
    "RESTful",
    "API",
    "Framework",
    "koa"
  ],
  "author": "Garbin Huang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/garbin/koapi/issues"
  },
  "homepage": "https://github.com/garbin/koapi#readme",
  "dependencies": {
    "ava": "^0.15.2",
    "bookshelf": "^0.9.5",
    "bookshelf-joi-validator": "^0.2.4",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "glob": "^7.0.3",
    "isipaddress": "0.0.2",
    "knex": "^0.10.0",
    "koa": "^2.0.0",
    "koa-accesslog": "0.0.2",
    "koa-better-body": "^1.0.17",
    "koa-bodyparser": "^2.0.1",
    "koa-bunyan-logger": "^1.3.0",
    "koa-compose": "^2.4.0",
    "koa-compress": "^1.0.9",
    "koa-convert": "^1.2.0",
    "koa-cors": "0.0.16",
    "koa-formidable": "^1.0.0",
    "koa-json-error": "^1.0.1",
    "koa-logger": "^1.3.0",
    "koa-morgan": "^1.0.1",
    "koa-pagination": "^2.0.1",
    "koa-qs": "^2.0.0",
    "koa-ratelimit": "^2.1.0",
    "koa-router": "^7.0.1",
    "koa-static": "^2.0.0",
    "lodash": "^4.6.1",
    "mysql": "^2.10.2",
    "tldjs": "^1.6.2",
    "unzip": "^0.1.11",
    "wildcard": "^1.1.2"
  },
  "devDependencies": {
    "ava": "^0.15.1",
    "ava-spec": "^1.0.0",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.9.0",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "nodemon": "^1.9.1",
    "nyc": "^6.4.4",
    "pg": "^4.5.5",
    "should": "^8.3.1",
    "should-http": "0.0.4",
    "supertest-as-promised": "^3.1.0"
  }
}
